{
  "manifest_version": 3,
  "name": "CharmPilot â€“ AI DM Closer",
  "description": "AI-powered DM assistant for creators. Generates flirty, persona-based replies with upsell suggestions.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon128.png",
      "48": "icons/icon128.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.onlyfans.com/*"
      ],
      "js": [
        "content-script.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css",
        "icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}